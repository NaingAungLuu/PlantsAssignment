<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="@drawable/bg_nav_header"
    android:padding="@dimen/margin_medium"
    android:layout_height="@dimen/nav_header_height">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/bg_leaf_pattern"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naing Aung Luu"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_medium_2x"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="@dimen/margin_small"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gardener Guru"
        android:textColor="@color/memberRankColor"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginBottom="@dimen/margin_small"
        />


</LinearLayout>